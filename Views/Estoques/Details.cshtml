@model Produção.Models.Estoque

@{
    ViewData["Title"] = "Visualização das Informações do Material";
}

    <div class="container col-6">
        <br />
        <h2 class="text-center">Visualização das Informações do Material</h2>
        <br />

        <div>
            <h5>Material</h5>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Descricao)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Descricao)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Quantidade)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Quantidade)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Categoria)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Categoria.Descricao)
                </dd>
            </dl>
        </div>
        <br />
        <br />
        <div class="text-center">

            <button type="button" class="btn btn-info">
                <a class="text-light" asp-action="Edit" asp-route-id="@Model.EstoqueId"><img src="/img/edit.png" /> Editar</a>
            </button>


        </div>
        <br />
        <br />
        <a class="text-dark" asp-action="Index"><img src="/img/list.png" />  Lista de Materiais</a>
    </div>
