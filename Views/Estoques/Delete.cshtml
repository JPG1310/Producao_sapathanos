@model Produção.Models.Estoque

@{
    ViewData["Title"] = "Exclusão de Matéria Prima";
}

    <div class="container col-6">
        <br />
        <h2 class="text-center">Exclusão de Matéria Prima</h2>
        <br />
        <h6 class="text-danger text-center">Tem certeza que deseja excluir este item?</h6>
        <div>
            <h4>Estoque</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Descricao)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Descricao)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Quantidade)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Quantidade)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Categoria)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Categoria.Descricao)
                </dd>
            </dl>
            <br />
            <br />
            <form class="text-center" asp-action="Delete">
                <input type="hidden" asp-for="EstoqueId" />
                <input type="submit" value="Deletar" class="btn btn-danger" />

            </form>
            <br />
            <br />
            <a class="text-dark" asp-action="Index"><img src="/img/list.png" />  Lista de Materiais</a>
        </div>
        </div>