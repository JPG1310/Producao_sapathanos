@model Produção.Models.Categoria

@{
    ViewData["Title"] = "Visualização das Informações da Categoria";
}
    <div class="container col-6">
        <br />
        <h2 class="text-center">Visualização das Informações do Modelo</h2>
        <br />

        <div>
            <h5>Categoria</h5>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Descricao)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Descricao)
                </dd>
            </dl>

            <p class="font-weight-bold">Produtos da Categoria</p>
            
            <dl class="row">
                @foreach (var item in Model.Produtos) 
                {
                <dd class="col-sm-12">
                    @Html.DisplayFor(modelItem => item.Descricao)
                </dd>
                }

            </dl>

        </div>

        <br />
        <br />
        <div class="text-center">
       
                <button type="button" class="btn btn-info">
                    <a class="text-light" asp-action="Edit" asp-route-id="@Model.Id"><img src="/img/edit.png" /> Editar</a>
                </button>
         
         
        </div>
        <br />
        <br />
        <a class="text-dark" asp-action="Index"><img src="/img/list.png" />  Lista de Modelos</a>

    </div>