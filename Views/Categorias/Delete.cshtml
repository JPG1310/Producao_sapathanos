@model Produção.Models.Categoria

@{
    ViewData["Title"] = "Exclusão de Categoria";
}
<div class="container col-6">
    <br />
    <h2 class="text-center">Exclusão de Modelos</h2>
    <br />
<h6 class="text-danger text-center">Tem certeza que deseja excluir este item?</h6>
<div>
    <h4>Categoria</h4>
    <hr />
    <dl class="row">
        <dt class="col">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class="col">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
    </dl>
    <br />
    <br />
    <form class="text-center" asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Deletar" class="btn btn-danger" />

    </form>
    <br />
    <br />
    <a class="text-dark" asp-action="Index"><img src="/img/list.png" />  Lista de Modelos</a>
</div>
</div>